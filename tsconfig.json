{
  "compilerOptions": {
    "target": "ES5",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["ESNext", "dom"],
    "module": "esnext",
    "outDir": "./dist",
    "moduleResolution": "node"
  },
  "include": ["src/**.ts", "global.d.ts"]
}
